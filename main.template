terraform {
  required_providers {
    proxmox = {
      source = "telmate/proxmox"
      version = "3.0.1-rc1"
    }
  }
}

  
##existing boot disk
disks {    
  scsi{
    scsi0{
      disk{
        backup               = true
        format               = "raw"          
        storage              = "ceph"                  
        iothread             = false           
        readonly             = false 
        replicate            = true 
        size                 = var.storage
                  
      }
    }
  }    
}

  
provider "proxmox" {  
  pm_api_url = "https://pve.thejfk.ca/api2/json"    
  pm_api_token_id = "terraform@pam!main_terraform"    
  pm_api_token_secret = "b01b0155-c025-4b3a-b173-cb6b1bf9eb17"    
  pm_tls_insecure = false
}

/* Configure Cloud-Init User-Data with custom config file */
resource "proxmox_vm_qemu" @@@vm_name {  
  count     = @@@count
  vmid        = var.vmid
  name        = var.vm_name
  desc        = "tf description"
  target_node = var.pve_node
  agent       = 0
  

  clone = "ubuntu-cloud"
  full_clone = true

  # The destination resource pool for the new VM
 # pool = var.vm_pool



  scsihw  = "virtio-scsi-pci"
  bootdisk = "scsi0"
  cores   = var.cores
  sockets = 1
  memory  = var.memory  

  network {    
    model = "virtio"    
    bridge  = "vmbr0"
    @@@vlan
  }

  sshkeys = <<EOT
  ssh-rsa  kevin@bessie
  ssh-rsa  kevin@ansible
  ssh-rsa  kevin@terraform
  ssh-rsa  kevin@fedora
  EOT  

  os_type   = "ubuntu"
  ipconfig0 = "ip=${var.vm_ip},gw=${var.vm_gw}"

  cloudinit_cdrom_storage = "ceph"

}
