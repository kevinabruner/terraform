# Modify path for templatefile and use the recommended extention of .tftpl for syntax hylighting in code editors.
resource "local_file" "cloud_init_user_data_file" {
  count    = @@@count
  content  = templatefile("${path.module}/files/cloud-init.cloud_config.tftpl", { ssh_key = var.ssh_public_key, hostname = var.vm_name })
  filename = "${path.module}/files/user_data_0.cfg"
}

resource "null_resource" "cloud_init_config_files" {
  count = @@@count
  connection {
    type     = "ssh"
    user     = "${var.pve_user}"
    password = "${var.password}"
    host     = "${var.pve_node}"
  }

  provisioner "file" {
    source      = local_file.cloud_init_user_data_file[0].filename
    destination = "/var/lib/vz/snippets/user_data_vm-0.yml"
  }
}

/* Configure Cloud-Init User-Data with custom config file */
resource "proxmox_vm_qemu" "cloudinit-test" {
  depends_on = [
    null_resource.cloud_init_config_files,
  ]

  name        = var.vm_name
  desc        = "tf description"
  target_node = var.pve_node

  clone = "ubuntu-cloud"

  # The destination resource pool for the new VM
  pool = var.vm_pool

  storage = "ceph"
  cores   = var.cores
  sockets = 1
  memory  = var.memory
  disk_gb = var.storage
  nic     = "virtio"
  bridge  = "vmbr0"

  ssh_user        = "root"
  ssh_private_key = <<EOF
-----BEGIN RSA PRIVATE KEY-----
private ssh key root
-----END RSA PRIVATE KEY-----
EOF

  os_type   = "cloud-init"
  ipconfig0 = "ip=var.vm_ip,gw=var.vm_gw"

  /*
    sshkeys and other User-Data parameters are specified with a custom config file.
    In this example each VM has its own config file, previously generated and uploaded to
    the snippets folder in the local storage in the Proxmox VE server.
  */
  cicustom                = "user=local:snippets/user_data_vm-0.yml"
  /* Create the Cloud-Init drive on the "local-lvm" storage */
  cloudinit_cdrom_storage = "ceph"

  provisioner "remote-exec" {
    inline = [
      "ip a"
    ]
  }
}





