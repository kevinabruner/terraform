/* Configure Cloud-Init User-Data with custom config file */
resource "proxmox_vm_qemu" @@@vm_name {  
  count       = @@@count
  vmid        = var.vmid
  name        = var.vm_name
  description = "description"
  target_node = var.pve_node
  agent       = 1

  ##existing boot disk, cloned and expanded as needed
  disks {    
    scsi{
      scsi0{
        disk{
          backup               = true
          format               = "raw"          
          storage              = "@@@storage_location"                 
          iothread             = false           
          readonly             = false 
          replicate            = true 
          size                 = var.storage                    
        }
      }
    }    
    ide {
      ide3 {
        cloudinit {
          storage = "@@@storage_location"
        }
      }
      ide2{
        cdrom{
          passthrough = false
        }
      }
    }
  }

  serial {
    id = 0
    type = "socket"
  }

  cpu {
    type = "host"
    cores   = var.cores
    sockets = 1    
  }

  start_at_node_boot = true
  @@@image
  full_clone = true
  @@@vm_pool
  scsihw  = "virtio-scsi-pci"
  boot = "order=scsi0;ide3" 
  tags = ""
  
  memory  = var.memory  
  os_type   = "cloud-init"
  ipconfig0 = "ip=${var.vm_ip},gw=${var.vm_gw}"
  @@@fastip
  ciuser = var.pve_user
  cipassword = var.password

 
  @@@network


  sshkeys = <<EOF
